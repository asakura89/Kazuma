    "version": "0.2.0",
    "configurations": [
        {
            "name": "run kazuma",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Paprika/Paprika/bin/Debug/net7.0/Paprika.exe",
            "args": ["kazuma:run", "${workspaceFolder}/Paprika/Paprika/bin/Debug/net7.0/Kazuma/App_Data/kazuma.config.xml"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}